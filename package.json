{
  "name": "pharmacy_pos",
  "productName": "Pharmacy Plus POS",
  "version": "0.0.1",
  "repository": "https://github.com/nyugoh/pharmacy-pos.git",
  "description": "Web based POS system",
  "main": "main.js",
  "scripts": {
    "start1": "electron .",
    "build": "electron-packager . pos --ignore=node_modules/electron-* && cp assets/icons/png/64x64.png pos-linux-x64/resources/atom.png",
    "package": "asar pack pos-linux-x64/resources/app pos-linux-x64/resources/pos.asar",
    "package-linux": "electron-packager . pharmacy-pos --ignore=node_modules/electron-* --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/images/pos-icon142x142.png --prune=true --out=release-builds",
    "package-mac": "electron-packager . pos --ignore=node_modules/electron-* --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.png.hqx --prune=true --out=release-builds",
    "package-win": "electron-packager . pharmacy-pos --ignore=node_modules/electron-* --overwrite --prune --platform=win32 --arch=x64 --icon=assets/images/favicon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Pharmacy POS\"",
    "create-debian-installer": "electron-installer-debian --src release-builds/pharmacy-pos-linux-x64/ --arch amd64 --config debian.json",
    "create-win-installer": "node windows-installer/create-installer",
    "postinstall": "electron-builder install-app-deps",
    "start": "yarn install && electron .",
    "pack": "build --dir --win --ia32",
    "dist": "build --win --ia32"
  },
  "author": "Magnum Digital Limited Kenya <joenyugoh@gmail.com>",
  "license": "BSD-2-Clause",
  "dependencies": {
    "browser-window": "^0.4.0",
    "moment": "^2.20.1",
    "socket.io": "~1.7.x",
    "sweetalert2": "^7.12.3"
  },
  "engines": {
    "node": ">=6.11.4"
  },
  "devDependencies": {
    "electron": "^1.8.3"
  },
  "config": {
    "forge": "electron-forge-config.js"
  },
  "build": {
    "appId": "com.electron.magnum",
    "productName": "Pharmacy Plus POS",
    "copyright": "Copyright Â© 2018 Magnum Digital Limited Kenya",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/win.ico"
    }
  }
}
